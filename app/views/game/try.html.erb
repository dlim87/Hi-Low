<div class="overwrapper">

<h1 class="messagetxt"><%=@message %></h1>
<div class="wrapper">
    <div class="message">
        <% unless (@message==nil) %>
        <% if(@message == "YOU GET A GOLD MEDAL!") %>
        <%= image_tag ("gold.png") %>
        <% elsif (@message =="YOU GET A SILVER MEDAL.") %>
        <%= image_tag ("silver.png") %>
        <% elsif (@message=="YOU GET A BRONZE MEDAL :(")%>
        <%= image_tag ("bronze.png") %>
        <% end %>
        <% else %>
        <% end %>
    </div>
    <div class="container">
        <div class="textstuff">
            <%=cookies[:username]%> guessed <%= @guess %>. <br />
            <%=cookies[:username]%>'s guess was <%= @result %> <br />
            <%=cookies[:username] %> guessed <%= cookies[:tries] %> times<br />
            <%=cookies[:username] %>'s previous guesses are: <br />
            <% if cookies[:oldguesses].length <34 %>
                <%=cookies[:oldguesses]%><br />
                <% else %>
                <%= cookies[:oldguesses][0,34] %> <br />
                <%= cookies[:oldguesses][34..-1] %>
                <% end %>
            <div class="proximity">
                <%=@proximity%>
            </div>
        </div>
        <div class="info">
            <form action="/game" method="get">
                <input class="userguess" type="text" name="guess" value="" placeholder="Your Guess" />
                <button class="submit" type="submit" name="" value="Submit">submit</button>
            </form>
        </div>
        <div class="reset">
            <form action="/new_game" method="get">
                <button class="submit" type="submit" name="" value="Submit">RESET</button>
            </form>
        </div>
    </div>

</div>
</div>
